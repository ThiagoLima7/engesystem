generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UF {
  AC
  AL
  AP
  AM
  BA
  CE
  DF
  ES
  GO
  MA
  MT
  MS
  MG
  PA
  PB
  PR
  PE
  PI
  RJ
  RN
  RS
  RO
  RR
  SC
  SP
  SE
  TO
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                     String           @id @default(cuid())
  name                   String
  email                  String           @unique
  emailVerified          DateTime?
  image                  String?
  CPF                    String
  admissionDate          DateTime         @db.Timestamptz()
  bank                   String?
  agency                 String?
  account                String?
  operation              String?
  pixKey                 String?
  accounts               Account[]
  sessions               Session[]
  roles                  Role[]
  variableMoney          VariableMoney[]
  discounts              Discount[]
  constructions          Construction[]
  receivedMoneyInAdvance MoneyInAdvance[]
  overTimeWork           OverTimeWork[]

  @@unique([name, CPF])
}

model Role {
  id        String  @id @default(cuid())
  name      String
  UF        UF
  salary    Decimal @db.Decimal(10, 2)
  // WARNING: Any modification to this values, change it on TypeScript side too,
  // which is in utils/utils.ts
  // Hierarchy:
  // 0: Incapaz de acessar o sistema
  // 1: Apontador
  // 2: Administrativo
  // 3: CEO
  hierarchy Int     @default(0)
  workers   User[]

  @@unique([name, UF])
}

model Discount {
  id    String  @id @default(cuid())
  name  String  @unique
  value Decimal @db.Decimal(10, 2)
  user  User[]
}

model Construction {
  id         String    @id @default(cuid())
  overTimeId String?
  name       String
  UF         UF
  workers    User[]
  overTime   OverTime? @relation(fields: [overTimeId], references: [id])

  @@unique([name, UF])
}

model VariableMoney {
  id               String   @id @default(cuid())
  userId           String
  payedAt          DateTime
  productionSalary Decimal  @db.Decimal(10, 2)
  bonus            Decimal  @db.Decimal(10, 2)
  worker           User     @relation(fields: [userId], references: [id])
}

model MoneyInAdvance {
  id          String   @id @default(cuid())
  userId      String
  payedAt     DateTime
  value       Decimal  @db.Decimal(10, 2)
  description String
  worker      User     @relation(fields: [userId], references: [id])
}

model OverTime {
  id                 String         @id @default(cuid())
  overTimeWorkId     String         @unique
  percentageOnSalary Decimal        @db.Decimal(10, 2)
  constructions      Construction[]
  overTimeWork       OverTimeWork   @relation(fields: [overTimeWorkId], references: [id])
}

model OverTimeWork {
  id           String    @id @default(cuid())
  userId       String
  payedAt      DateTime
  hours        Int
  overTimeInfo OverTime?
  worker       User      @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
